<div class="px-8 py-4">
  <div class="mx-auto max-w-4xl w-full leading-loose p-4">
    <h2 class="text-4xl mt-0">
      Log In
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-field", autofocus: true %>
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-field" %>
        </div>
      </div>
      <%= f.submit "Log in", class: "px-4 py-2 rounded no-underline" %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
